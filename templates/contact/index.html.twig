{# templates/contact/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Contact us</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css">
        <!-- custom css file link  -->
        <link rel="stylesheet" href="{{ asset('client/css/style.css') }}">
        <link rel="shortcut icon" type="x-icon" href="{{ asset('images/logo.png') }}" />
    </head>
<body>
<header class="header">

    <section class="flex">
        <a href="{{ path ('home')}}" class="logo"><b>GL-icious </b> ðŸ˜‹</a>
        <nav class="navbar">
            <a href="{{ path ('home')}}">home</a>
            <a href="{{ path ('about')}}">about</a>
            <a href="{{ path ('menu')}}">menu</a>
            <a href="{{ path ('orders')}}">orders</a>
            <a href="{{ path ('contact')}}">contact</a>
        </nav>

        <div class="icons">
            <a href="{{ path ('search')}}"><i class="fas fa-search"></i></a>
            <a href="{{ path ('cart')}}"><i class="fas fa-shopping-cart"></i><span></span></a>
            <div id="user-btn" class="fas fa-user"></div>
            <div id="menu-btn" class="fas fa-bars"></div>
        </div>

        <div class="profile">
            <p class="name"></p>
            <div class="flex">
                <a href="{{ path ('profile')}}" class="btn">profile</a>
                <a href="{{ path ('logout')}}" class="delete-btn">logout</a>
            </div>
        </div>
    </section>

</header>

<div class="heading">
    <h3>Contact Us</h3>
    <p><a href="{{ path('home') }}">Home</a> <span> / Contact </span></p>
</div>
<section class="contact">
    {% for message in app.session.flashBag.get('success') %}
        <div class="alert alert-success " id="alertemailsuccess"  style="display: flex">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.session.flashBag.get('danger') %}
        <div class="alert alert-danger" id="alertemaildanger" style="display:flex">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="image">
            <embed src="{{ asset('client/images/contact-img.svg') }}">
        </div>

        {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
        <h3>Tell us something!</h3>
        {{ form_row(form.email) }}

        <div class="text-container"> {{ form_row(form.message)}}</div>

        <button type="submit" class="btn">Send Message</button>
        {{ form_end(form) }}

    </div>
</section>
<footer class="footer">

    <section class="box-container">

        <div class="box">
            <img src="{{ asset('client/images/email-icon.png') }}" alt="">
            <h3>our email</h3>
            <a href="mailto:gl.icious.team@gmail.com">gl.icious.team@gmail.com</a>
        </div>

        <div class="box">
            <img src="{{ asset('client/images/phone-icon.png') }}" alt="">
            <h3>our number</h3>
            <a href="tel: +216 0000 0000">+216 0000 0000</a>
        </div>

    </section>

    <div class="credit"><span></span></div>

</footer>

<div class="loader">
    <img src="{{ asset('client/images/loader.gif') }}" alt="">
</div>

<script src="{{ asset('client/js/script.js') }}"></script>
<script>
    // Select the flash message divs
    const successAlert = document.getElementById('alertemailsuccess');
    const dangerAlert = document.getElementById('alertemaildanger');

    // Remove the success flash message after 3 seconds
    if (successAlert) {
        setTimeout(() => {
            successAlert.style.opacity = '0';
        }, 3000);
    }

    // Remove the danger flash message after 3 seconds
    if (dangerAlert) {
        setTimeout(() => {
            dangerAlert.style.opacity = '0';
        }, 3000);
    }
</script>

</body>
